<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xpressive.Home.Surveillance.App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="StatusImage"
                Source="elipse_gray.png"
                HeightRequest="150"
                WidthRequest="150 "/>

            <Button
                x:Name="ArmBtn"
                Text="Aktivieren" 
                Clicked="OnArmClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="DisarmBtn"
                Text="Deaktivieren" 
                Clicked="OnDisarmClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
